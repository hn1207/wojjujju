<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="640dp"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="end"
            android:src="@drawable/close"/>


        <TextView
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:lineSpacingExtra="7sp"
            android:text="결제가 완료되었습니다!"
            android:layout_gravity="center"
            android:textColor="@color/color_primary"
            android:textSize="16sp" />




        <TextView

            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center"
            android:lineSpacingExtra="7sp"
            android:text="정보를 다시 확인해주세요."
            android:textColor="@color/warm_grey"
            android:textSize="11sp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/payment_complete_item_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/warm_grey_background"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="start"
                    android:text="예약자명"
                    android:textColor="@color/soft_black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="start"
                    android:text="김진경 / 010 2345 1234"
                    android:textColor="@color/soft_black"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="start"
                    android:text="입실"
                    android:textColor="@color/soft_black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="start"
                    android:text="12.29 (화) 10:00"
                    android:textColor="@color/soft_black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="start"
                    android:text="퇴실"
                    android:textColor="@color/soft_black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="start"
                    android:text="12.31 (목) 13:00"
                    android:textColor="@color/soft_black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:gravity="start"
                    android:text="총 결제금액"
                    android:textColor="@color/soft_black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:gravity="start"
                    android:text="50,000원"
                    android:textColor="#f62b4c"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/round_red_solid_white"
                    android:gravity="start"
                    android:text="결제완료"
                    android:textAlignment="center"

                    android:layout_gravity="center_vertical"
                    android:textColor="#f62b4c"
                    android:textSize="11sp" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</ScrollView>
