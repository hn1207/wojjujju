                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="25dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/reservation" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
