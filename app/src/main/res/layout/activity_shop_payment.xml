<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_arrow"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="결제하기"
                android:textColor="@color/color_primary"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            android:text="배송지 정보"
            android:textColor="@color/soft_black"
            android:layout_marginBottom="5dp"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:buttonTint="@color/color_primary"
                android:checked="true"
                android:text="기본 배송지" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="신규 배송지" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                android:text="배송지"
                android:textColor="@color/soft_black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:background="@drawable/round"
                        android:layout_marginRight="19dp"
                        />

                    <TextView

                        android:layout_width="78dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="19dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center|center_vertical"
                        android:lineSpacingExtra="3sp"
                        android:text="우편번호 검색"
                        android:background="@drawable/round_red"
                        android:textColor="@color/color_primary"
                        android:textSize="11sp" />

                </LinearLayout>

                <EditText
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/round"

                    android:layout_marginRight="19dp"
                    />
            </LinearLayout>






        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="3sp"
                android:text="수령인"
                android:textColor="@color/soft_black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/round"
                    android:layout_marginRight="19dp"
                    />
            </LinearLayout>






        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="22dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:text="연락처 "
                android:textColor="@color/soft_black"
                android:textSize="14sp" />
            <LinearLayout

                android:layout_marginRight="5dp"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:background="@drawable/round"
                    android:layout_weight="1.3" />

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:text="-"
                    android:textColor="@color/soft_black"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/round"
                    android:layout_weight="1.3" />

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:text="-"
                    android:textColor="@color/soft_black"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/round"
                    android:layout_weight="1.3" />

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="19dp"
                    android:background="@drawable/round_red"
                    android:gravity="center"
                    android:lineSpacingExtra="3sp"
                    android:layout_gravity="center"
                    android:text="번호인증"
                    android:textColor="@color/color_primary"
                    android:textSize="11sp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="3sp"
                android:text="배송메모"
                android:textColor="@color/soft_black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <Spinner
                    android:id="@+id/delivery_memo"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="19dp"
                    android:background="@drawable/round"
                    />
            </LinearLayout>





        </LinearLayout>



        <View
            android:layout_marginTop="37dp"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/strong_white"/>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="상품정보"
            android:textColor="@color/soft_black"
            android:textSize="14sp" />
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/strong_white" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/payment_item_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/strong_white"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="22dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="쿠폰"
                android:textColor="@color/soft_black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|center_vertical">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="15dp"
                    android:text="1장"
                    android:textColor="@color/soft_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/coupon"
                    android:layout_width="52dp"
                    android:layout_height="20dp"
                    android:gravity="end"
                    android:background="@drawable/round_red"
                    android:textAlignment="center"
                    android:text="조회"
                    android:textColor="@color/color_primary"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/strong_white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="22dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="포인트"
                android:textColor="@color/soft_black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="0p"
                    android:background="@drawable/round_grey"
                    android:textColor="@color/soft_grey"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="3sp"
                    android:text="사용가능 2,300p"
                    android:textColor="@color/warm_grey"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.3"
                    android:gravity="end"
                    android:background="@drawable/round_red"
                    android:text="적용"
                    android:textAlignment="center"
                    android:textColor="@color/color_primary"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/strong_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lineSpacingExtra="3sp"
                android:text="결제금액"
                android:textColor="@color/soft_black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:lineSpacingExtra="3sp"
                android:text="12,000원"
                android:textColor="@color/soft_black"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lineSpacingExtra="3sp"
                android:text="쿠폰적용"
                android:textColor="@color/soft_black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:lineSpacingExtra="3sp"
                android:text="  -3,000원"
                android:textColor="@color/soft_black"
                android:textSize="14sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/strong_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lineSpacingExtra="3sp"
                android:text="총 결제금액"
                android:textColor="@color/soft_black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:lineSpacingExtra="3sp"
                android:text="9,000원"
                android:textColor="@color/color_primary"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/strong_white" />


        <TextView
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lineSpacingExtra="3sp"
            android:text="결제수단"
            android:layout_marginBottom="10dp"
            android:textColor="@color/soft_black"
            android:textSize="16sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="0dp"
android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/round_reservation"
                android:gravity="center"
                android:text="신용카드"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
 android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_full_grey"
                android:gravity="center"
                android:text="휴대폰결제"
                android:textColor="@color/soft_black"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="0dp"
android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/round_full_grey"
                android:gravity="center"
                android:text="카카오페이"
                android:textColor="@color/soft_black"
                android:textSize="12sp" />


            <TextView
                android:layout_width="0dp"
 android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_full_grey"
                android:gravity="center"
                android:text="무통장 입금"
                android:textColor="@color/soft_black"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="5dp">


            <LinearLayout
                android:layout_width="0dp"
        android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/round_full_grey"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAYCO"
                    android:textStyle="bold"
                    android:textColor="@color/color_primary"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  신용카드 결제"
                    android:textColor="@color/soft_black"
                    android:textSize="12sp"/>


            </LinearLayout>



            <TextView
                android:layout_width="0dp"
 android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_full_grey"
                android:gravity="center"
                android:text="네이버페이"
                android:textColor="@color/soft_black"
                android:textSize="12sp" />


        </LinearLayout>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/color_primary"
            android:layout_marginLeft="20dp"
            android:text="지금 선택하신 결제수단을 다음에도 사용" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/strong_white" />

        <CheckBox
            android:layout_marginTop="10dp"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/payment_text"
            android:textSize="12sp"
            android:buttonTint="@color/color_primary"
            android:text="결제대행 서비스 표준이용약관에 동의합니다. (필수)" />

<TextView            android:layout_marginTop="10dp"            android:id="@+id/complete"            android:layout_width="match_parent"            android:layout_height="@dimen/toolbar_height"            android:background="@color/color_primary"            android:gravity="center"            android:text="결제하기"            android:textColor="@color/white"            android:textSize="20sp" />


    </LinearLayout>


</ScrollView>