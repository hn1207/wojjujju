<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_marginTop="21dp"
        android:layout_width="match_parent"
        android:layout_height="105dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/round_full_grey"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center"
            android:lineSpacingExtra="3sp"
            android:text="우쭈쭈 포인트로 기부를 해보세요!"
            android:textColor="@color/color_primary"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="쇼핑, 데이트, 미용 등 나의 반려동물을 위해 사용한 돈으로\n포인트가 쌓였어요! 나의 반려동물뿐만 아닌 \n다른 동물들도 보호하고 사랑을 나누어보시는게 어때요? "
            android:textColor="@color/soft_black"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:background="@drawable/round_grey"
                android:gravity="center"
                android:text="0p"
                android:textColor="@color/warm_grey"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="사용가능 23,900p"
                android:textColor="@color/color_primary"
                android:textSize="12sp" />
        </LinearLayout>


        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/color_primary"
            android:text="모두 쓸래요" />
    </LinearLayout>
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"


        >
        <TextView
            android:id="@+id/donate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_primary"
            android:gravity="center"
            android:text="기부하기"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>



</LinearLayout>
