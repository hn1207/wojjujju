<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="@dimen/sign_in_padding"
    tools:openDrawer="start">


    <ImageView
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3sp"
        android:src="@drawable/txt_sign_in_addinfo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/soft_black"
        android:layout_marginTop="30dp"
        android:text="*닉네임을 써주세요"

        />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_grey"
        android:ems="10"
        android:hint=" 한글 최대 8자, 영문 최대 16자"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/soft_black"
        android:layout_marginTop="30dp"
        android:text="*휴대폰 번호를 입력해주세요"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/round_grey"
            android:ems="10"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/round_red_solid_red"
            android:textColor="@color/strong_white"
            android:text="번호 인증하기"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/authorize"
            />

    </LinearLayout>


    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_grey"
        android:ems="10"

        android:hint=" 인증번호를 입력하세요"
        />


    <TextView
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/soft_black"
        android:layout_marginTop="12dp"
        android:text="인증번호 재전송"
        />




</LinearLayout>
